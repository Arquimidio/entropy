---
import "../styles/base.css";
import { ThemeSelector } from "../components/React/ThemeSelector";
import ThemeLoader from "../components/ThemeLoader.astro";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
}

const { title } = Astro.props;
const isHome = Astro.url.pathname === "/";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ThemeLoader />
    <title>{title}</title>
  </head>
  <body
    class="flex relative justify-center h-[100vh] dark:bg-dark bg-light font-default overflow-x-hidden"
  >
    <div
      class="absolute top-0 left-0 w-full h-full dark:light-pattern dark-pattern z-0"
    >
    </div>
    <div
      class="flex flex-col order-2 text-slate-700 dark:text-slate-200 z-10 w-full items-center"
    >
      <header class="w-full">
        <nav class="flex items-center flex-grow w-full p-10">
          {
            !isHome && (
              <a href="/">
                <Icon
                  name="arrow-left"
                  class="fill-dark dark:fill-light"
                  width={40}
                  height={40}
                />
              </a>
            )
          }
          <ThemeSelector client:load />
        </nav>
      </header>
      <slot />
    </div>
  </body>
</html>
