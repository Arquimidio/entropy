---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
---

<a href={`blog/${post.slug}`}>
  <article
    class="flex justify-between pl-5 border border-gray-700 gap-10 rounded-md"
  >
    <div class="flex flex-col py-5 flex-grow">
      <h2 class="text-2xl line-clamp-2 text-slate-800 dark:text-slate-200">{post.data.title}</h2>
      <span class="text-lg font-thin text-gray-400"
        >{post.data.description}</span
      >
      <span class="text-sm text-gray-600">Posted {post.data.date}</span>
      <hr class="w-full article-bottom-border h-[1px] border-slate-500 my-2" />
      <div class="text-xs flex gap-2">
        <span class="text-slate-800 dark:text-slate-200">Read time</span>
        <div class="flex gap-2">
          {post.data.categories.map((tag) => <span class="text-slate-800 dark:text-slate-200">{tag}</span>)}
        </div>
      </div>
    </div>
    <div class="w-[200px] clip hidden md:block">
      <Image
        class="article-image object-cover right-0 z-1 rounded-r image-overlay transition-all h-full"
        src={post.data.image}
        alt={post.data.title}
      />
    </div>
  </article>
</a>
